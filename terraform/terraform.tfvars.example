# Example Terraform variables file
# Copy this to terraform.tfvars and update with your values

# Basic Configuration
resource_group_name = "liveeventops-rg"
location           = "East US"
environment        = "dev"
project_name       = "liveeventops"

# VM Configuration
vm_size        = "Standard_B2s"
device_vm_size = "Standard_B1s"
admin_username = "azureuser"

# Device Counts - Adjust based on event requirements
camera_count   = 2  # Number of camera simulation VMs
wireless_count = 3  # Number of wireless AP simulation VMs
printer_count  = 2  # Number of printer simulation VMs

# SSH Public Key - Replace with your actual public key
# Generate with: ssh-keygen -t rsa -b 4096 -C "your-email@example.com"
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQC... your-public-key-here"

# Security Configuration
allowed_ip_ranges = [
  "YOUR_IP_ADDRESS/32",  # Replace with your IP address
  # "10.0.0.0/8",        # Example: Allow private networks
  # "172.16.0.0/12",     # Example: Allow private networks
  # "192.168.0.0/16"     # Example: Allow private networks
]
